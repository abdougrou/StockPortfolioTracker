@model StockPortfolioTracker.Models.Transaction

@{
    ViewData["Title"] = "Details";
}

<h1 class="h3 mb-2 text-gray-800">Details</h1>
<p class="mb-4">
    This form displays the details of the choosen transaction fetched from the database.
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Transaction Details</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Portfolio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Portfolio.PortfolioID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Stock)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Stock.CompanyName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PriceAtTransaction)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PriceAtTransaction)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransactionStatus)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TransactionStatus.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransactionDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TransactionDate)
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.TransactionID" class="btn btn-secondary" style="width:150px">Edit</a>
            <a asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
        </div>
    </div>
</div>
