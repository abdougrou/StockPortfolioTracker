@model StockPortfolioTracker.Models.Transaction

@{
    ViewData["Title"] = "Delete";
}

<h1 class="h3 mb-2 text-gray-800">Delete Transaction</h1>
<p class="mb-4">
    This page displays the details of the choosen transaction to delete. To delete the transaction from database click "Delete" button.
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Transaction</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Portfolio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Portfolio.PortfolioID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Stock)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Stock.CompanyName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PriceAtTransaction)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PriceAtTransaction)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransactionDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TransactionDate)
            </dd>
        </dl>

        <p>Are you sure you want to delete this record? This action will remove the transaction with id = <strong>@Model.TransactionID</strong> from the database permanently.</p>
        <form asp-action="Delete">
            <input type="hidden" asp-for="TransactionID" />
            <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
            <a asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
        </form>
    </div>
</div>
